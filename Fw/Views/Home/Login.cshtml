<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        header {
            background: url('images/back.png');
            background-size: cover;
            background-position: full;
            color: white;
            padding: 70px;
            text-align: center;
            width: 100%;
        }


        section {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            margin: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-top: 10px;
            font-weight: bold;
            color: #343a40;
        }

        input {
            margin: 5px 0;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }

        button {
            margin-top: 20px;
            padding: 10px;
            background-color: #343a40;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #23272b;
            }

        p {
            margin-top: 10px;
            text-align: center;
            color: #343a40;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 10px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
    </head>
    <body>
        

        <section id="login-form">
            <form action="/login" method="post">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>

                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>

                <button type="submit">Login</button>
            </form>

            <script>
                function login(username, password) {
                    const loginUrl = '/token'; // Replace with your API's URL
                    const data = `grant_type=password&username=${encodeURIComponent(username)}&password=${encodeURIComponent(password)}`;

                    fetch(loginUrl, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded'
                        },
                        body: data
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Login failed');
                            }
                            return response.json();
                        })
                        .then(data => {
                            // Assuming the token is in the 'access_token' field of the response
                            localStorage.setItem('authToken', data.access_token);
                            console.log('Login successful, token stored in localStorage');

                            // Redirect to the Index action in the Home controller
                            window.location.href = "/Home/DashBorad";
                        })
                        .catch(error => {
                            console.error('Error during login:', error.message);
                            showLoginError('Login failed: ' + error.message); // Show error toast
                        });
                }

                document.getElementById('login-form').addEventListener('submit', function (event) {
                    event.preventDefault();

                    const username = document.getElementById('username').value;
                    const password = document.getElementById('password').value;

                    login(username, password);
                });

                function showLoginError(message) {
                    alert(message);
                }
            </script>

    </body>
</html>





